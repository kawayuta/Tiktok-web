<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags(default_meta_tags) %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= analytics_init if Rails.env.production? %>
  </head>

  <body>
  <header>
      <div class="header-inner">
        <div class="branding_logo">
          <%= link_to image_tag('tik@3x.png', alt:"TikTok Pro"), root_path %>
        </div>

        <p class="header_tag_title"><%= @tag.nil? ? "" : "##{@tag.tag_title}" %></p>
        <p class="header_tag_raking">
          <% unless @tag.nil? %>
            <%= link_to ranking_tag_path(@tag) do %>
              <i class="fas fa-chart-line"></i>
            <% end %>
          <% end %>
        </p>

        <%= form_tag(search_tags_path, method: "get") do %>
            <%= text_field_tag :keyword, '', class: 'form-control', placeholder: 'キーワードを入力してね' %>
          <%= button_tag '<i class="material-icons">search</i>'.html_safe, :type => "submit" %>
        <% end %>
      </div>
    </header>
    <main>
      <aside>
        <div class="pickup_trending_tag">
          <h2>人気急上昇中のタグ</h2>
          <ul>
            <% @trending_tags.shuffle.take(5).each do |tag| %>
              <li>
                <p class="video_content_meta_tag_side">
                  <%= link_to "##{tag.tag_title}", search_tags_path(keyword: tag.tag_title) %>
                </p>
              </li>
          <% end %>
          </ul>
        </div>


<!--        <div class="pickup_trending_video">-->
<!--          <h2>急上昇中の動画</h2>-->
<!--          <ul>-->
            <%# @trending_videos.offset(rand(5)).limit(3).each do |video| %>
<!--              <li>-->
                <%#= image_tag video.video_cover_image %>
<!--              </li>-->
            <%# end %>
<!--          </ul>-->
<!--        </div>-->
      </aside>
      <div class="container">
        <section>
          <%= yield %>
        </section>
      </div>
    </main>


  </body>
</html>
